<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Notes.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark modern-navbar shadow-lg">
            <div class="container-xl">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Notes" asp-action="Index">
                    <div class="brand-icon">
                        <i class="bi bi-sticky-fill"></i>
                    </div>
                    <span class="ms-2">NotesApp</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-end">
                    <ul class="navbar-nav ms-auto gap-2">
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom" asp-area="" asp-controller="Notes" asp-action="Index">
                                <i class="bi bi-collection"></i> All Notes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-custom btn-create-nav" asp-area="" asp-controller="Notes" asp-action="Create">
                                <i class="bi bi-plus-circle"></i> Create
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        @RenderBody()
    </div>

    <footer class="modern-footer mt-5 py-5">
        <div class="container-xl">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold text-white mb-3">
                        <i class="bi bi-sticky-fill"></i> NotesApp
                    </h5>
                    <p class="text-muted small">A modern note-taking application built with ASP.NET Core 8 and Entity Framework Core.</p>
                </div>
                <div class="col-md-4 mb-4 mb-md-0">
                    <h6 class="fw-bold text-white mb-3">Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-muted text-decoration-none"><i class="bi bi-chevron-right"></i> Home</a></li>
                        <li><a href="#" class="text-muted text-decoration-none"><i class="bi bi-chevron-right"></i> Features</a></li>
                        <li><a href="#" class="text-muted text-decoration-none"><i class="bi bi-chevron-right"></i> About</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold text-white mb-3">Connect</h6>
                    <div class="social-icons">
                        <a href="#" class="social-icon" title="GitHub"><i class="bi bi-github"></i></a>
                        <a href="#" class="social-icon" title="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="social-icon" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <hr class="bg-secondary my-4">
            <div class="text-center text-muted small">
                <p>&copy; 2025 NotesApp. All rights reserved. | Built with <i class="bi bi-heart-fill text-danger"></i> using ASP.NET Core 8</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
