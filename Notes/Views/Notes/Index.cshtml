@model IEnumerable<Notes.Models.Note>

@{
    ViewData["Title"] = "My Notes";
}

<div class="modern-container">
    <!-- Header Section -->
    <div class="notes-header mb-5">
        <div class="container-xl">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="modern-heading mb-2">
                        <i class="bi bi-sticky-fill"></i> My Notes
                    </h1>
                    <p class="text-muted">Organize your thoughts and ideas with beautiful notes</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a asp-action="Create" class="btn btn-modern btn-lg">
                        <i class="bi bi-plus-circle"></i> Create Note
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-xl">
        @if (Model.Any())
        {
            <!-- Notes Grid -->
            <div class="notes-grid">
                @foreach (var note in Model)
                {
                    <div class="note-card-wrapper">
                        <div class="note-card" style="border-left: 6px solid @note.GetPriorityColor();">
                            <!-- Card Header -->
                            <div class="note-card-header">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h5 class="note-title">@note.Title</h5>
                                    <span class="priority-badge @note.GetPriorityBadgeClass()">
                                        @note.Priority
                                    </span>
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="note-card-body">
                                <p class="note-content">@note.Content</p>
                            </div>

                            <!-- Card Footer -->
                            <div class="note-card-footer">
                                <div class="timestamps">
                                    <div class="timestamp-item">
                                        <i class="bi bi-calendar-event"></i>
                                        <small>Updated: @note.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                    </div>
                                    <div class="timestamp-item">
                                        <i class="bi bi-calendar-plus"></i>
                                        <small>Created: @note.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="action-buttons mt-3">
                                    <a asp-action="Edit" asp-route-id="@note.Id" class="btn-action btn-edit" title="Edit">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@note.Id" class="btn-action btn-delete" title="Delete">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <h3 class="empty-state-title">No Notes Yet</h3>
                <p class="empty-state-text">Get started by creating your first note</p>
                <a asp-action="Create" class="btn btn-modern mt-4">
                    <i class="bi bi-plus-circle"></i> Create Your First Note
                </a>
            </div>
        }
    </div>
</div>
